-# frozen_string_literal: true
= simple_form_for(@group_material) do |f|
  .card-body
    .m-2
      = f.input :groupId, as: :hidden
      = f.label :groupName, 'Adding to group'
      = f.label @group.name, class: 'form-control', readonly: true
    .m-2
      = f.label :materialId, 'Select a material'
      = f.collection_select :materialId, @materials, :id, :name, { prompt: 'Select a material' }, class: 'form-control'

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', edit_group_path(@group), class: 'btn btn-link ms-auto'
