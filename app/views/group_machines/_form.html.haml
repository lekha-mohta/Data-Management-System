-# frozen_string_literal: true
= simple_form_for(@group_machine) do |f|
  .card-body
    .m-2
      = f.input :groupId, as: :hidden
      = f.label :groupName, 'Adding to group'
      = f.label @group.name, class: 'form-control', readonly: true
    .m-2
      = f.label :machineID, 'Select a machine'
      = f.collection_select :machineId, @machines, :id, :name, { prompt: 'Select a machine' }, class: 'form-control'

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', edit_group_path(@group), class: 'btn btn-link ms-auto'
