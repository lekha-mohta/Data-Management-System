.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        Build Project details
      .card-body
        %dl.row.mb-0
          %dt.col-md-3 Name:
          %dd.col-md-9= @build_project.name
          %dt.col-md-3 Description:
          %dd.col-md-9= @build_project.description
      .card-footer.d-flex.justify-content-between.mt-2
        = link_to 'Back', build_projects_path, class: 'btn btn-outline-secondary'
        = link_to 'Edit', edit_build_project_path(@build_project), class: 'btn btn-primary'