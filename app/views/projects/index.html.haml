.card
  .card-header.d-flex.align-items-center
    %span Listing Projects

    = link_to 'New Project', new_project_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Name
        %th Description
        %th
    %tbody
      - @projects.each do |project|
        %tr
          %td= project.name
          %td= project.description
          %td
            .btn-toolbar.float-end
              = link_to 'Show', project, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_project_path(project), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'